{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "locationEastUS2": {
            "type": "string"
        },
        "vnetNameEastUS2": {
            "type": "string"
        },
        "subnetNameEastUS2": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/azureFirewalls",
            "name": "myAzureFirewall",
            "apiVersion": "2021-08-01", 
            "location": "[parameters('locationEastUS2')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNameEastUS2'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', 'myFirewallPublicIP')]",
                "[resourceId('Microsoft.Network/firewallPolicies', 'myFirewallPolicy')]"
            ],
            "properties": {
                "firewallPolicy": {
                    "id": "[resourceId('Microsoft.Network/firewallPolicies', 'myFirewallPolicy')]"
                },
                "sku": {
                    "name": "AZFW_VNet",
                    "tier": "Standard"
                },
                "ipConfigurations": [
                    {
                        "name": "azureFirewallIpConfig",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetNameEastUS2'), 'AzureFirewallSubnet')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'myFirewallPublicIP')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2021-05-01",
            "name": "myFirewallPublicIP",
            "location": "[parameters('locationEastUS2')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2021-02-01",
            "name": "myRouteTable",
            "location": "[parameters('locationEastUS2')]",
            "properties": {
                "routes": [
                    {
                        "name": "default-route",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(resourceId('Microsoft.Network/azureFirewalls', 'myAzureFirewall'), '2021-08-01').ipConfigurations[0].properties.privateIPAddress]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2021-02-01",
            "name": "[concat(parameters('vnetNameEastUS2'), '/', parameters('subnetNameEastUS2'))]",
            "properties": {
                "addressPrefix": "10.1.0.0/24",
                "routeTable": {
                    "id": "[resourceId('Microsoft.Network/routeTables', 'myRouteTable')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/firewallPolicies",
            "apiVersion": "2021-08-01",
            "name": "myFirewallPolicy",
            "location": "[parameters('locationEastUS2')]",
            "properties": {
                "threatIntelMode": "Alert",
                "rules": [
                    {
                        "name": "BlockSocialMedia",
                        "priority": 100,
                        "ruleType": "ApplicationRule",
                        "action": {
                            "type": "Deny"
                        },
                        "sourceAddresses": [
                            "*"
                        ],
                        "protocols": [
                            {
                                "protocolType": "Http",
                                "port": 80
                            },
                            {
                                "protocolType": "Https",
                                "port": 443
                            }
                        ],
                        "targetFqdns": [
                            "www.facebook.com",
                            "*.facebook.com",
                            "www.twitter.com",
                            "*.twitter.com",
                            "www.instagram.com",
                            "*.instagram.com",
                            "www.tiktok.com",
                            "*.tiktok.com"
                        ]
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2021-02-01",
            "name": "ws11-nic",
            "location": "[parameters('locationEastUS2')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetNameEastUS2'), parameters('subnetNameEastUS2'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-07-01",
            "name": "ws11",
            "location": "[parameters('locationEastUS2')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B2ms"
                },
                "osProfile": {
                    "computerName": "ws11",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'ws11-nic')]"
                        }
                    ]
                }
            }
        }
    ]
}