{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "locationEastUS": {
      "type": "string"
    },
    "locationEastUS2": {
      "type": "string"
    }
  },
  "variables": {
    "eastVNetName": "EastUS-VNet",
    "east2VNetName": "EastUS2-VNet",
    "eastVNetAddress": "10.0.0.0/16",
    "east2VNetAddress": "10.1.0.0/16"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2023-04-01",
      "name": "[variables('eastVNetName')]",
      "location": "[parameters('locationEastUS')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('eastVNetAddress')]"
          ]
        },
        "subnets": [
          {
            "name": "web-subnet",
            "properties": {
              "addressPrefix": "10.0.1.0/24"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2023-04-01",
      "name": "[variables('east2VNetName')]",
      "location": "[parameters('locationEastUS2')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('east2VNetAddress')]"
          ]
        },
        "subnets": [
          {
            "name": "ws-subnet",
            "properties": {
              "addressPrefix": "10.1.1.0/24"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
      "apiVersion": "2023-04-01",
      "name": "[format('{0}/EastUS-to-EastUS2', parameters('eastVNetName'))]",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "properties": {
        "remoteVirtualNetwork": {
          "id": "[resourceId(parameters('resourceGroupName'), 'Microsoft.Network/virtualNetworks', parameters('east2VNetName'))]"
        },
        "allowVirtualNetworkAccess": true,
        "allowForwardedTraffic": false,
        "allowGatewayTransit": false,
        "useRemoteGateways": false
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
      "apiVersion": "2023-04-01",
      "name": "[format('{0}/EastUS2-to-EastUS', parameters('east2VNetName'))]",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks/virtualNetworkPeerings', parameters('resourceGroupName'), parameters('eastVNetName'), 'EastUS-to-EastUS2')]"
      ],
      "properties": {
        "remoteVirtualNetwork": {
          "id": "[resourceId(parameters('resourceGroupName'), 'Microsoft.Network/virtualNetworks', parameters('eastVNetName'))]"
        },
        "allowVirtualNetworkAccess": true,
        "allowForwardedTraffic": false,
        "allowGatewayTransit": false,
        "useRemoteGateways": false
      }
    }
  ]
}